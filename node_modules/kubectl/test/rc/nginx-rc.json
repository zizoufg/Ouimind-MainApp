{
	"apiVersion": "v1",
	"kind": "ReplicationController",
	"metadata":{
		"name": "nginx"
  	},
	"spec":{
	  	"replicas": 3,
	  	"selector":{
	    	"app": "nginx"
		},
	  	"template":{
		    "metadata":{
		      	"name": "nginx",
		      	"labels":{
		        	"app": "nginx"
				}
			},
		    "spec":{
		      	"containers":[{
			      	"name": "nginx",
			        "image": "dhub.yunpro.cn/junjun16818/hello-node",
			        "ports":[
				        { "containerPort": 80 }
					]
				}]
			}
		}
	}
}